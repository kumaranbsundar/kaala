{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "aws-sam",
            "request": "direct-invoke",
            "name": "src:TimesheetApi::TimesheetApi.Lambda::Handler (dotnetcore3.1)",
            "invokeTarget": {
                "target": "code",
                "projectRoot": "${workspaceFolder}/src",
                "lambdaHandler": "TimesheetApi::TimesheetApi.Lambda::Handler"
            },
            "lambda": {
                "runtime": "dotnetcore3.1",
                "payload": {},
                "environmentVariables": {}
            },
            "aws": {
                "region": "us-east-1",
                "credentials": "profile:kaaladev"
            }            
        },
        {
            "type": "aws-sam",
            "request": "direct-invoke",
            "name": "Test:TimesheetApi",
            "invokeTarget": {
                "target": "code",
                "projectRoot": "${workspaceFolder}/test",
                "lambdaHandler": "TimesheetApi.Tests::TimesheetApi.LambdaTest::TetGetMethod1"
            },
            "lambda": {
                "runtime": "dotnetcore3.1",
                "payload": {},
                "environmentVariables": {
                    "AWS_PROFILE": "kaaladev"
                }
            },
            "aws": {
                "region": "us-east-1",
                "credentials": "profile:kaaladev"
            }
        },
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/infra/bin/Debug/net5.0/TimesheetApiInfra.dll",
            "args": [],
            "cwd": "${workspaceFolder}/infra",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "justMyCode": false
        }
    ]
}